{
  "plugins": [
    "react"
  ],
  "extends": [
    "airbnb"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "comma-dangle": ["error", {"functions": "ignore"}],
    "no-use-before-define": ["error", { "functions": false, "classes": true }],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "semi": 2
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jquery": true
  }
}
